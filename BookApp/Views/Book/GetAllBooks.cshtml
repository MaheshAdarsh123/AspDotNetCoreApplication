@model IEnumerable<BookApp.Models.BookModel>
@*@{
    Layout = "_Layout";
}*@

<div class="container">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns=""></svg>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div cite="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book/GeetBook/@book.Id" class="btn btn-primary my-2">View Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
         
    </div>
</div>

